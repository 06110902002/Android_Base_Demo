<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- TitleBarLayout style -->
    <style name="title_bar_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/title_bar_height</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="text_color">@color/white</item>
        <item name="back_ground">@color/app_phone_status_bar</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/blue_title_selector</item>
    </style>

    <!-- 不能使用TitleBarLayout的情况下，自己组合title时需要的样式 start -->
    <style name="layout_title_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/title_bar_height</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:background">@drawable/blue_title_selector</item>
    </style>

    <style name="txt_title_center_style">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/pure_white</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxWidth">200dp</item>
        <item name="android:layout_centerInParent">true</item>
    </style>

    <style name="img_title_back_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/title_bar_height</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:paddingLeft">@dimen/activity_space_15</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:src">@drawable/selector_nav_back</item>
    </style>

    <style name="img_title_right_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/title_bar_height</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:paddingRight">@dimen/activity_space_15</item>
        <item name="android:paddingLeft">30dp</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:src">@drawable/selector_nav_back</item>
    </style>
    <!-- 不能使用TitleBarLayout的情况下，自己组合title时需要的样式 end -->

    <!-- 分割线 start -->
    <style name="v_line_1dp">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/menu_split</item>
    </style>

    <style name="v_line_1px">
        <item name="android:layout_width">0.5dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/menu_split</item>
    </style>

    <style name="h_line_1dp">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/menu_split</item>
    </style>

    <style name="h_line_1px">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/menu_split</item>
    </style>

    <style name="btn_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="btn_style_lower">
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="custom_dialog" parent="android:Theme.Dialog">
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.4</item>
    </style>

    <style name="dialogTransparent" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item><!--边框-->
        <item name="android:windowIsFloating">true</item><!--是否浮现在activity之上-->
        <item name="android:windowIsTranslucent">false</item><!--半透明-->
        <item name="android:windowBackground">@android:color/transparent</item><!--背景透明-->
        <item name="android:windowNoTitle">true</item><!--无标题-->
        <item name="android:backgroundDimEnabled">false</item><!--模糊，背景透明是这个-->
    </style>
</resources>