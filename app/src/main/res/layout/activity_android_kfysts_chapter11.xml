<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tiny.demo.firstlinecode.kfysts.chapter11.AndroidKfystsChapter11Activity">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/btn_test1"
            style="@style/btn_style_lower"
            android:text="AsyncTask start"
            app:layout_constraintTop_toTopOf="parent"/>

        <Button
            android:id="@+id/btn_test2"
            style="@style/btn_style_lower"
            android:text="AsyncTask stop"
            app:layout_constraintTop_toBottomOf="@id/btn_test1"/>

        <Button
            android:id="@+id/btn_test3"
            style="@style/btn_style_lower"
            android:text="AsyncTask 在子线程执行"
            app:layout_constraintTop_toBottomOf="@id/btn_test2"/>

        <Button
            android:id="@+id/btn_test4"
            style="@style/btn_style_lower"
            android:text="AsyncTask 串行执行"
            app:layout_constraintTop_toBottomOf="@id/btn_test3"/>

        <Button
            android:id="@+id/btn_test5"
            style="@style/btn_style_lower"
            android:text="主线程中创建HandlerThread"
            app:layout_constraintTop_toBottomOf="@id/btn_test4"/>

        <Button
            android:id="@+id/btn_test6"
            style="@style/btn_style_lower"
            android:text="子线程中创建HandlerThread"
            app:layout_constraintTop_toBottomOf="@id/btn_test5"/>

        <Button
            android:id="@+id/btn_test7"
            style="@style/btn_style_lower"
            android:text="IntentService 串行执行"
            app:layout_constraintTop_toBottomOf="@id/btn_test6"/>

        <Button
            android:id="@+id/btn_test8"
            style="@style/btn_style_lower"
            android:text="四种线程池的典型用法。"
            app:layout_constraintTop_toBottomOf="@id/btn_test7"/>

        <TextView
            android:id="@+id/tv_ThreadPoolExecutors"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="@string/string_content_ThreadPoolExecutors"
            app:layout_constraintTop_toBottomOf="@id/btn_test8"
            />

        <Button
            android:id="@+id/btn_test9"
            style="@style/btn_style_lower"
            android:text="通过ThreadPoolExecutors创建线程池。"
            app:layout_constraintTop_toBottomOf="@id/tv_ThreadPoolExecutors"/>

    </android.support.constraint.ConstraintLayout>
</ScrollView>
