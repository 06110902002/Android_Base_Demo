<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".javareference.clazz.ClazzActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="20dp"
                android:text="Java Class相关" />

            <Button
                android:id="@+id/btnGetName"
                style="@style/btn_style_lower"
                android:text="getName" />

            <Button
                android:id="@+id/btnGetSimpleName"
                style="@style/btn_style_lower"
                android:text="getSimpleName" />

            <Button
                android:id="@+id/btnGetCanonicalName"
                style="@style/btn_style_lower"
                android:text="getCanonicalName" />
        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>