<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tiny.demo.firstlinecode.javareference.JavaDeepCopyActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_java_deep_copy1"
            style="@style/btn_style_lower"
            android:text="Java深复制和浅复制:Object Cloneable"/>

        <Button
            android:id="@+id/btn_java_deep_copy2"
            style="@style/btn_style_lower"
            android:text="Java深复制和浅复制:List(Object) Cloneable"/>

        <Button
            android:id="@+id/btn_java_deep_copy3"
            style="@style/btn_style_lower"
            android:text="Java深复制和浅复制:Map(Object) Cloneable"/>

        <Button
            android:id="@+id/btn_java_deep_copy4"
            style="@style/btn_style_lower"
            android:text="Java深复制和浅复制:Object new"/>

        <Button
            android:id="@+id/btn_java_deep_copy5"
            style="@style/btn_style_lower"
            android:text="Java深复制和浅复制:List(Object) new"/>

        <Button
            android:id="@+id/btn_java_deep_copy6"
            style="@style/btn_style_lower"
            android:text="Java深复制和浅复制:Map(Object) new"/>

        <Button
            android:id="@+id/btn_java_deep_copy7"
            style="@style/btn_style_lower"
            android:text="Java深复制和浅复制:Object, List, Map, Serializable"/>

        <Button
            android:id="@+id/btn_java_deep_copy8"
            style="@style/btn_style_lower"
            android:text="Java序列化和反序列化 实现深复制：相关工具类测试"/>

    </LinearLayout>
</ScrollView>
