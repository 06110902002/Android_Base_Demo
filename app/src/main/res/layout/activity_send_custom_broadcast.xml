<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_send_custom_broadcast"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.tiny.demo.firstlinecode.broadcastreceiver.SendCustomBroadcastActivity">

    <Button
        android:id="@+id/btn_send_standard_broadcast"
        style="@style/btn_style_lower"
        android:text="发送无序广播"/>

    <Button
        android:id="@+id/btn_send_ordered_broadcast"
        style="@style/btn_style_lower"
        android:text="发送有序广播"/>
</LinearLayout>
