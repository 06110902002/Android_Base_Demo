<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tiny.demo.firstlinecode.kfysts.chapter02.aidl.Book1ManagerActivity">

    <Button
        android:id="@+id/btn_bind_on_thread1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="bindService on Thread1"
        android:textAllCaps="false"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <Button
        android:id="@+id/btn_unbind_on_thread1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="unBindService on Thread1"
        android:textAllCaps="false"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_bind_on_thread1"
        />

    <Button
        android:id="@+id/btn_bind_on_thread2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="bindService on Thread2"
        android:textAllCaps="false"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_unbind_on_thread1"
        />

    <Button
        android:id="@+id/btn_unbind_on_thread2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="unBindService on Thread2"
        android:textAllCaps="false"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_bind_on_thread2"
        />

</android.support.constraint.ConstraintLayout>
