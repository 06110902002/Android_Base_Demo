<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tiny.demo.firstlinecode.kfysts.chapter12.AndroidKfystsChapter12Activity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:layout_gravity="center_horizontal"
                android:layout_margin="20dp"/>

            <Button
                android:id="@+id/btn_test1"
                style="@style/btn_style_lower"
                android:text="LruCache典型的初始化过程"/>

            <Button
                android:id="@+id/btn_test2"
                style="@style/btn_style_lower"
                android:text="DiskLruCache的open操作"/>

            <Button
                android:id="@+id/btn_test3"
                style="@style/btn_style_lower"
                android:text="照片墙"/>

        </LinearLayout>

    </ScrollView>


</android.support.constraint.ConstraintLayout>
