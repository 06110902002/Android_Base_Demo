<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tiny.demo.firstlinecode.sourcecode.chapter1.Chapter1Activity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_image_loader1"
                style="@style/btn_style_lower"
                android:text="ImageLoader原版"/>

            <Button
                android:id="@+id/btn_image_loader2"
                style="@style/btn_style_lower"
                android:text="ImageLoader 单一职责原则"/>

            <Button
                android:id="@+id/btn_image_loader3"
                style="@style/btn_style_lower"
                android:text="ImageLoader 开闭原则"/>

        </LinearLayout>

    </ScrollView>

</android.support.constraint.ConstraintLayout>
