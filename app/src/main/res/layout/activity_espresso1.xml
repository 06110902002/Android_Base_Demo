    <Button
        android:id="@+id/btn_auto_test1_first"
        style="@style/btn_style_lower"
        android:text="按钮1"
        />

    <TextView
        android:id="@+id/txt_auto_test1_first"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
