<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_test1"
            style="@style/btn_style_lower"
            android:text="响应式拉取——测试1"
            />

        <Button
            android:id="@+id/btn_test2"
            style="@style/btn_style_lower"
            android:text="响应式拉取——同步"
            />

        <Button
            android:id="@+id/btn_test3"
            style="@style/btn_style_lower"
            android:text="响应式拉取——异步"
            />

        <Button
            android:id="@+id/btn_test4"
            style="@style/btn_style_lower"
            android:text="响应式拉取——异步"
            />

        <Button
            android:id="@+id/btn_test5"
            style="@style/btn_style_lower"
            android:text="响应式拉取——默认实现"
            />

        <Button
            android:id="@+id/btn_test6"
            style="@style/btn_style_lower"
            android:text="读取文件"
            />

        <TextView
            android:id="@+id/tv_file"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:textColor="#333"
            android:textSize="14sp"/>
    </LinearLayout>

</ScrollView>
