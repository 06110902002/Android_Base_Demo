<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".kotlin.primer.project14.CoroutinesActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnTestLaunch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:onClick="test1"
                android:text="测试在主线程中启动一个协程"
                android:textAllCaps="false" />

            <Button
                style="@style/btn_style_lower"
                android:onClick="test2"
                android:text="使用Java代码发起Get请求，处理返回数据" />

            <Button
                style="@style/btn_style_lower"
                android:onClick="test3"
                android:text="使用Kotlin代码的协程，发起Get请求，处理返回数据" />

            <Button
                style="@style/btn_style_lower"
                android:onClick="test4"
                android:text="重置文本" />

            <TextView
                android:id="@+id/mContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Hello World" />

        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>