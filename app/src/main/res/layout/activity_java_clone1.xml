<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tiny.demo.firstlinecode.javareference.copy.JavaCloneActivity1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/activity_space_15"
            android:paddingRight="@dimen/activity_space_15"
            android:text="对象包含对象的复制\n\n"
            android:textColor="@color/font_main_1"
            android:textSize="@dimen/font_14"
            />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/activity_space_15"
            android:paddingRight="@dimen/activity_space_15"
            android:text="对象包含对象的复制，源数据："
            android:textColor="@color/font_main_1"
            android:textSize="@dimen/font_14"
            />

        <TextView
            android:id="@+id/txt1"
            style="@style/txt_style_normal"/>

        <Button
            android:id="@+id/btn_java_clone_obj_with_obj"
            style="@style/btn_style_lower"
            android:text="修改copy过的数据"/>

        <TextView
            style="@style/txt_style_normal"
            android:text="修改结果："
            />

        <TextView
            android:id="@+id/txt2"
            style="@style/txt_style_normal"
            />


    </LinearLayout>
</ScrollView>
