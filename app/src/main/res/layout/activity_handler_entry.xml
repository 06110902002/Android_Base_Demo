<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_handler"
            style="@style/btn_style_lower"
            android:text="handler常见的几种使用方式"/>

        <Button
            android:id="@+id/btn_different_handler_communication"
            style="@style/btn_style_lower"
            android:text="子线程间发送消息"/>

        <Button
            android:id="@+id/btn_handler_thread"
            style="@style/btn_style_lower"
            android:text="HandlerThread"/>

        <Button
            android:id="@+id/btn_handler_error"
            style="@style/btn_style_lower"
            android:text="java.lang.RuntimeException: Can't create handler inside thread that has not called Looper.prepare()" />


    </LinearLayout>

</ScrollView>