<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
    >

    <android.support.v4.view.ViewPager
        android:id="@+id/guide_page_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never"/>

    <com.tiny.demo.firstlinecode.common.view.CircleIndicator
        android:id="@+id/guide_page_indicator"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dip"
        app:ci_drawable="@drawable/ic_indicator_selected"
        app:ci_drawable_unselected="@drawable/ic_indicator_normal"
        app:ci_height="7dip"
        app:ci_margin="9dip"
        app:ci_width="7dip"/>


</RelativeLayout>