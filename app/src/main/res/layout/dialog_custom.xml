<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="center"
              android:orientation="vertical"
              android:paddingLeft="1dp"
              android:paddingRight="1dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="15dp"
        android:paddingTop="15dp"
        android:text="自定义的Dialog"
        android:textColor="@color/font_main_1"
        android:textSize="20sp"
        android:textStyle="bold"
        />

    <View
        android:id="@+id/line_dialog_base_top"
        style="@style/h_line_1dp"/>

    <com.tiny.demo.firstlinecode.common.view.MaxHeightView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:mhv_HeightDimen="300dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/layout_dialog_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:padding="25dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="自定义的Dialog的Description：阿道夫静安寺打飞机爱神的箭爱神的箭发数据的罚款世纪东方"
                    android:textColor="#999"
                    android:textSize="16sp"
                    />
            </LinearLayout>
        </ScrollView>
    </com.tiny.demo.firstlinecode.common.view.MaxHeightView>

    <View style="@style/h_line_1dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/btn_dialog_custom_cancel"
            android:layout_width="0dip"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/dialog_button_selector"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/font_main_1"
            android:textSize="18sp"
            android:textStyle="bold"
            />

        <View
            android:id="@+id/interval_line_dialog_base"
            style="@style/v_line_1dp"/>

        <TextView
            android:id="@+id/btn_dialog_custom_ok"
            android:layout_width="0dip"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/dialog_button_selector"
            android:gravity="center"
            android:text="确定"
            android:textColor="#2371e9"
            android:textSize="18sp"
            android:textStyle="bold"/>

    </LinearLayout>

</LinearLayout>