<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".kfysts.chapter01.intent.explicit.ExplicitIntentEntryActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_intent_test1"
            style="@style/btn_style_lower"
            android:text="显式Intent调用——构造方法传入Component" />

        <Button
            android:id="@+id/btn_intent_test2"
            style="@style/btn_style_lower"
            android:text="显式Intent调用——setComponent" />

        <Button
            android:id="@+id/btn_intent_test3"
            style="@style/btn_style_lower"
            android:text="显式Intent调用——setClass" />

        <Button
            android:id="@+id/btn_intent_test4"
            style="@style/btn_style_lower"
            android:text="显式Intent调用——setClassName(packageContext, className)" />

        <Button
            android:id="@+id/btn_intent_test5"
            style="@style/btn_style_lower"
            android:text="显式Intent调用——setClassName(packageName, className)" />

        <Button
            android:id="@+id/btn_intent_test6"
            style="@style/btn_style_lower"
            android:text="显式Intent调用，启动其他应用的Activity——setClassName(packageName, className)，目标Activity设置了android:exported='true'" />

        <Button
            android:id="@+id/btn_intent_test7"
            style="@style/btn_style_lower"
            android:text="显式Intent调用，启动其他应用的Activity——setClassName(packageName, className)，目标Activity设置了Intent-Filter" />
    </LinearLayout>

</ScrollView>