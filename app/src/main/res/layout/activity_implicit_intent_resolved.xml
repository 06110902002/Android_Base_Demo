<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".kfysts.chapter01.intent.resolve.ImplicitIntentResolvedActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_resolve_activity_test1"
            style="@style/btn_style_lower"
            android:text="Intent#resolveActivity" />

        <Button
            android:id="@+id/btn_resolve_activity_test2"
            style="@style/btn_style_lower"
            android:text="PackageManager#resolveActivity" />

        <Button
            android:id="@+id/btn_resolve_activity_test3"
            style="@style/btn_style_lower"
            android:text="PackageManager#queryIntentActivities" />

        <TextView
            android:id="@+id/tv_query_results"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:textColor="@color/black"
            tools:text="我是查询结果" />
    </LinearLayout>

</ScrollView>