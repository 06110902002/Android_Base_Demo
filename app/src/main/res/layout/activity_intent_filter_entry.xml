<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".kfysts.chapter01.intent.intentfilter.IntentFilterEntryActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_intent_test1"
            style="@style/btn_style_lower"
            android:text="只包含action" />

        <Button
            android:id="@+id/btn_intent_test2"
            style="@style/btn_style_lower"
            android:text="action + category" />

        <Button
            android:id="@+id/btn_intent_test3"
            style="@style/btn_style_lower"
            android:text="action + data" />

        <Button
            android:id="@+id/btn_intent_test4"
            style="@style/btn_style_lower"
            android:text="action + category + data" />

    </LinearLayout>
</ScrollView>